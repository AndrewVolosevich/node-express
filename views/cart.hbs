<h1>{{title}}</h1>

{{#if cart.length}}
  {{#each cart}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-image">
            <img src="{{url}}">
            <span class="card-title">{{title}}</span>
            <a href="/cart/delete?id={{id}}" class="btn-floating halfway-fab waves-effect    waves-light red" target="_blank ">
              <i class="fas fa-plus" style="transform: rotate(45deg)"></i>
            </a>
          </div>
          <div class="card-content">
            <p class="title">{{id}}</p>
            <p class="price">{{price}}</p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>No goods in the cart</p>
{{/if}}
