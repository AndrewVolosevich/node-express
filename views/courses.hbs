<h1>Courses</h1>

{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{url}}">
          <span class="card-title">{{title}}</span>
          <a href="/courses/{{id}}" class="btn-floating halfway-fab waves-effect waves-light red">
            <i class="fas fa-arrow-right"></i>
          </a>
        </div>
        <div class="card-content">
          <p class="title">{{title}}</p>
          <p class="price">Price {{price}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
<p>No courses</p>
{{/if}}
